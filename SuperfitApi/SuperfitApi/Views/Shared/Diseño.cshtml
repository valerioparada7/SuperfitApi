    <style>
        .color {
            background-color: #007bff;
        }

        .letracolor {
            color: #007bff;
        }

        .colorred {
            background-color: #ff0018;
        }

        h3 {
            color: #007bff;
        }

        .contenido {
            margin-left: 50px;
            margin-right: 50px;
            margin-top: 50px;
            margin-bottom: 50px;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg" style="background-color:#007bff">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler btn btn-outline-light" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><i class="fa fa-navicon"></i></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("Perfil", "ClientesWeb", null, null)">
                        <span class="menu-collapsed text-white">Perfil</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("Rutinas", "ClientesWeb", null, null)">
                        <span class="menu-collapsed text-white">Mis rutinas</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("Mensualidades", "ClientesWeb", null, null)">
                        <span class="menu-collapsed text-white">Mensualidades</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("OutWeb", "LoginWeb", null, null)">
                        <span class="menu-collapsed text-white">Salir</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="contenido">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Software's Valerio Parada</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/datatablesjs")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            validacion();
        });
    function validacion() {
        var direccion = '@Url.Action("Validation", "LoginWeb")';
            $.ajax({
                type: "GET",
                url: direccion,
                success: function (data) {
                    if (data == "True") {
                        window.location.href='@Url.Action("LoginWeb", "LoginWeb")';
                    }
                },
                error: function (xhr, status, error) {
                    console.log("Result: " + status + " " + error + " " + xhr.status + " " + xhr.statusText)
                    alert("Ocurrio un error verifique su conexion");
                }
            });
        }
    </script>
</body>
</html>




