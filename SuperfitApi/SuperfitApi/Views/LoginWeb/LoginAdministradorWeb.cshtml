<!DOCTYPE html>
@{
    Layout = null;
}
<html>
<head>
    <title>Superfit Administrador Web </title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/datatablescss")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
<link rel="shortcut icon" type="image/png" href="https://superflyfit.000webhostapp.com/imagenes/superfiticono.jpeg" />
    <style>
        .login {
            margin-top: 10px;
            text-align: center;
        }

        .row {
            margin-top: 10px;
        }

        .card {
            margin-top: 100px;
            width: 400px;
            height: 500px;
            border-color: black;
            border-style: solid;
            border-width: 1px 1px 1px 1px;
            border-radius: 20px 20px;
        }

        .card-header {
            background-color: transparent;
            border-color: transparent;
        }

        .card-body {
            background-color: transparent;
            margin-top: 50px;
        }

        .card-footer {
            margin-top: 50px;
            border-color: transparent;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color:#007bff">
            <a class="navbar-brand" href="#"></a>
            <button class="navbar-toggler btn btn-outline-light" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"><i class="fa fa-navicon"></i></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="navbar-brand" href="@Url.Action("Inicio", "LoginWeb", null, null)">
                            <span class="menu-collapsed text-white">Home</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-brand" href="@Url.Action("RegistrarCliente", "LoginWeb", null, null)">
                            <span class="menu-collapsed text-white">Registrarse</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-brand" href="@Url.Action("LoginWeb", "LoginWeb", null, null)">
                            <span class="menu-collapsed text-white">Inicio sesión</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <div class="col-12 text-center">
                    <h3 style="color:#007bff">
                        Superfit para administradores
                    </h3>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("LoginAdministradorWeb", "LoginWeb", FormMethod.Post, new { @id = "FormLogin" }))
                {
                    <form>
                        <div class="row">
                            <div class="col">
                                @Html.TextBox("User", null, new { @class = "form-control", id = "User", placeholder = "Correo eléctronico o celular", style = "color:black;border-color:#007bff" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                @Html.TextBox("Pass", null, new { @class = "form-control", id = "Pass", type = "password", placeholder = "Contraseña", style = "color:black;border-color: #007bff" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <button type="submit" id="Iniciarsesion" class="form-control btn btn-primary" style="background-color: #007bff">Iniciar sesión</button>
                            </div>
                        </div>
                        <hr />
                        <div class="login">
                            @Html.ActionLink("Soy un cliente", "LoginWeb", "LoginWeb", new { @class = "btn-link" })
                        </div>
                        <div class="login">
                            @if (ViewBag.Mensaje != null)
                            {
                                <div class="text-danger">
                                    @ViewBag.Mensaje
                                </div>
                            }
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</body>
</html>