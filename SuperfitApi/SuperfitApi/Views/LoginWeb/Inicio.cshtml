@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/datatablescss")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/Content" href="https://cdn.datatables.net/1.10.24/Content/jquery.dataTables.Content">

    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.Content">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <link rel="shortcut icon" type="image/png" href="https://www.bsite.net/valerioparada/Imagenes/superfiticono.jpeg" style="width: 20em;" />    
    <style>
        .login {
            margin-top: 10px;
            text-align: center;
        }

        .row {
            margin-top: 10px;
        }

        .card {
            margin-top: 100px;
            width: 400px;
            height: 500px;
            border-color: black;
            border-style: solid;
            border-width: 1px 1px 1px 1px;
            border-radius: 20px 20px;
        }

        .card-header {
            background-color: transparent;
            border-color: transparent;
        }

        .card-body {
            background-color: transparent;
            margin-top: 50px;
        }

        .card-footer {
            margin-top: 50px;
            border-color: transparent;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color:#007bff;">
            <a class="navbar-brand" href="#"></a>
            <button class="navbar-toggler btn btn-outline-light" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"><i class="fa fa-navicon"></i></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="navbar-brand" href="@Url.Action("Inicio", "LoginWeb", null, null)">
                            <span class="menu-collapsed text-white">Home</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-brand" href="@Url.Action("Plataforma", "LoginWeb", null, null)">
                            <span class="menu-collapsed text-white">Acerca de la plataforma</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-brand" href="@Url.Action("Servicio", "LoginWeb", null, null)">
                            <span class="menu-collapsed text-white">Servicio</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-brand" href="@Url.Action("CambioFisico", "LoginWeb", null, null)">
                            <span class="menu-collapsed text-white">Cambios fisicos</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-brand" href="@Url.Action("Contacto", "LoginWeb", null, null)">
                            <span class="menu-collapsed text-white">Contacto</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-brand" href="@Url.Action("LoginWeb", "LoginWeb", null, null)">
                            <span class="menu-collapsed text-white">Inicio sesión</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main>
        <!--Slider area-->
        <section style="background-image:url(/Imagenes/hero.png);">
            <div class="row">
                <div class="col">
                    <div class="slide" >
                        <span data-animation="fadeInLeft" data-delay="0.1s" style="color: #007bff">Valerio Parada</span>
                        <h3 data-animation="fadeInLeft" data-delay="0.4s" style="color: #007bff">Inicia tus rutinas personalizadas</h3>
                        <a href="" class="btn hero-btn" data-animation="fadeInLeft" data-delay="0.8s" style="color: #007bff">Convertirme en mienbro</a>
                    </div>
                </div>
            </div>
        </section>
        <section style="background-image:url(/Imagenes/hero.png);height:1000px">
            <div class="row">
                <div class="col">
                    <div class="slide">
                        <span data-animation="fadeInLeft" data-delay="0.1s" style="color: #007bff">Valerio Parada</span>
                        <h3 data-animation="fadeInLeft" data-delay="0.4s" style="color: #007bff">Inicia tus rutinas personalizadas</h3>
                        <a href="" class="btn hero-btn" data-animation="fadeInLeft" data-delay="0.8s" style="color: #007bff">Convertirme en mienbro</a>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>
</html>
