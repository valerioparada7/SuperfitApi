<!DOCTYPE html>
@{
    Layout = null;
}
<html>
<head>
    <title>Superfit</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/datatablescss")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" type="text/Content" href="https://cdn.datatables.net/1.10.24/Content/jquery.dataTables.Content">

    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.Content">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <link rel="shortcut icon" type="image/png" href="https://www.bsite.net/valerioparada/Imagenes/superfiticono.jpeg" style="width: 20em;" />
    <style>
        .login {
            margin-top: 10px;
            text-align: center;
        }

        .row {
            margin-top: 10px;
        }

        .card {
            margin-top: 100px;
            width: 400px;
            height: 500px;
            border-color: black;
            border-style: solid;
            border-width: 1px 1px 1px 1px;
            border-radius: 20px 20px;
        }

        .card-header {
            background-color: transparent;
            border-color: transparent;
        }

        .card-body {
            background-color: transparent;
            margin-top: 50px;
        }

        .card-footer {
            margin-top: 50px;
            border-color: transparent;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-lg" style="background-color:#007bff">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler btn btn-outline-light" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><i class="fa fa-navicon"></i></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("Inicio", "LoginWeb", null, null)">
                        <span class="menu-collapsed text-white">Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("Plataforma", "LoginWeb", null, null)">
                        <span class="menu-collapsed text-white">Acerca de la plataforma</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("Servicio", "LoginWeb", null, null)">
                        <span class="menu-collapsed text-white">Servicio</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("CambioFisico", "LoginWeb", null, null)">
                        <span class="menu-collapsed text-white">Cambios fisicos</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("Contacto", "LoginWeb", null, null)">
                        <span class="menu-collapsed text-white">Contacto</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="navbar-brand" href="@Url.Action("LoginWeb", "LoginWeb", null, null)">
                        <span class="menu-collapsed text-white">Inicio sesión</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <div class="col-12 text-center">
                    <h3 style="color:#007bff">
                        Superfit
                    </h3>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("LoginWeb", "LoginWeb", FormMethod.Post, new { @id = "FormLogin" }))
                {
                    <form>
                        <div class="row">
                            <div class="col">
                                @Html.TextBox("User", null, new { @class = "form-control", id = "User", placeholder = "Correo eléctronico o celular", style = "color:black;border-color:#007bff" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                @Html.TextBox("Pass", null, new { @class = "form-control", id = "Pass", type = "password", placeholder = "Contraseña", style = "color:black;border-color: #007bff" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <button type="submit" id="Iniciarsesion" class="form-control btn btn-primary" onclik="document.body.style.cursor='wait';" style="background-color: #007bff">Iniciar sesión</button>
                            </div>
                        </div>
                        <div class="login">
                            @Html.ActionLink("¿Olvidaste tu contraseña?", "Recuperarcuenta", "LoginWeb", new { @class = "btn-link" })
                        </div>
                        <hr />
                        <div class="login">
                            @Html.ActionLink("Registrarse", "RegistrarCliente", "LoginWeb", new { @class = "btn btn-success" })
                        </div>
                        <div class="login">
                            @Html.ActionLink("Soy un administrador", "LoginAdministradorWeb", "LoginWeb", new { @class = "btn-link" })
                        </div>
                        <div class="login">
                            @if (ViewBag.Mensaje != null)
                            {
                                <div class="text-danger">
                                    @ViewBag.Mensaje
                                </div>
                            }
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</body>
</html>
